---
import bookIcon from "../assets/image/book.png";
import cakeIcon from "../assets/image/cake.png";
import healthIcon from "../assets/image/health.png";
import homeIcon from "../assets/image/home-2.png";
import chevronRight from "../assets/icon/chevron-right.svg";
import { Image } from "astro:assets";

type HelpCard = {
  icon: ImageMetadata;
  title: string;
  subtitle: string;
};

const cards: HelpCard[] = [
  {
    icon: bookIcon,
    title: "Education",
    subtitle: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros elementum tristique.",
  },
  {
    icon: healthIcon,
    title: "Health",
    subtitle: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros elementum tristique.",
  },
  {
    icon: homeIcon,
    title: "Housing & Shelter",
    subtitle: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros elementum tristique.",
  },
  {
    icon: cakeIcon,
    title: "Food Relief Funding",
    subtitle: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros elementum tristique.",
  },
];
---

<div class="help-community">
  <div class="text">
    <h2 class="title section-title">We've helped over 200 vulnerable communities</h2>
    <p class="subtitle">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros elementum tristique. Duis cursus, mi quis viverra ornare, eros dolor interdum nulla, ut commodo diam libero vitae erat.</p>
  </div>
  <div class="cards">
    {
      cards.map((c) => (
        <div class="card">
          <Image class="card-icon" src={c.icon} alt={c.title} />
          <h3 class="card-title">{c.title}</h3>
          <p class="card-subtitle">{c.subtitle}</p>
          <button class="btn-secondary card-action">
            <span>Donate Now</span>
            <Image class={"chevron-right"} src={chevronRight} alt={"chevron"} />
          </button>
        </div>
      ))
    }
  </div>
</div>

<style>
  .card {
    width: 100%;
    height: 100%;
    padding-left: 16px;
    padding-right: 16px;
    padding-top: 24px;
    padding-bottom: 24px;
    border-radius: 5px;
    border: 0.5px black solid;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    gap: 24px;
    display: inline-flex;
  }
  .card-title {
    color: black;
    font-size: 20px;
    font-family: Roboto;
    font-weight: 600;
    line-height: 30px;
    word-wrap: break-word;
  }
  .card-subtitle {
    text-align: center;
  }
  .help-community {
    display: flex;
    flex-direction: column;
    padding: 48px 24px;
    gap: 48px;
  }
  .text {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  .section-title {
    line-height: 67.2px;
    word-wrap: break-word;
    text-align: center;
  }
  .chevron-right {
    width: 13px;
    height: 13px;
  }
  .card-action {
    display: flex;
    gap: 12px;
    align-items: center;
    width: fit-content;
  }
  .cards {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }
  @media screen and (min-width: 768px) {
    .mission {
      flex-direction: row;
    }
    .cards {
      flex-direction: row;
    }
    .section-title {
      font-size: 56px;
    }
  }
</style>
