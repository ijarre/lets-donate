---
import { Image } from "astro:assets";
import heroImage from "../assets/image/hero-picture.jpeg";
import logo1 from "../assets/image/volunteers-logo/logo-1.png";
import logo2 from "../assets/image/volunteers-logo/logo-2.png";
import logo3 from "../assets/image/volunteers-logo/logo-3.png";
import logo4 from "../assets/image/volunteers-logo/logo-4.png";
import logo5 from "../assets/image/volunteers-logo/logo-5.png";
import logo6 from "../assets/image/volunteers-logo/logo-6.png";

const volunteers = [{ asset: logo1 }, { asset: logo2 }, { asset: logo3 }, { asset: logo4 }, { asset: logo5 }, { asset: logo6 }];
---

<div class="hero">
  <div class="top">
    <div class="hero-left">
      <div class="hero-text">
        <span class="hero-main-text">Make a Difference in the Lives of Children in Need</span>
        <span class="hero-secondary-text">We develop innovative design solutions that enable our clients to enhance their competitive advantage.</span>
      </div>
      <div class="hero-cta">
        <button class="btn">Donate Now</button>
        <button class="btn-secondary">Learn More</button>
      </div>
    </div>
    <Image class={"hero-right"} src={heroImage} alt={"children smiling"} />
  </div>
  <div class="bottom">
    <span class="text-subtitle"> Our volunteers all over the world</span>
    <div class="volunteers-logo">
      {volunteers.map((v) => <Image class={"volunteers-logo-item"} src={v.asset} alt={"volunteers logo"} />)}
    </div>
  </div>
</div>

<style>
  .volunteers-logo {
    display: flex;
    gap: 19px;
    overflow: auto;
  }
  /* Hide scrollbar for Chrome, Safari and Opera */
  .volunteers-logo::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .volunteers-logo {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
  .bottom {
    padding: 80px 64px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 48px;
  }
  .hero-cta {
    display: flex;
    width: 75%;
    gap: 16px;
  }
  .btn {
    /* width: 88px; */
  }
  .btn-secondary {
    /* width: 88px; */
  }
  .hero-text {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  .hero-main-text {
    font-size: 40px;
    font-weight: 700;
  }
  @media screen and (min-width: 768px) {
    .hero-main-text {
      font-size: 56px;
    }
  }
  .hero-secondary-text {
    font-size: 18px;
    font-weight: 400;
  }
  main {
    width: 100%;
    height: 100%;
  }
  .hero {
    background-color: #faf7f2;
    display: flex;
    flex-direction: column;
  }
  .top {
    display: flex;
    flex-direction: column;
  }
  @media screen and (min-width: 768px) {
    .top {
      flex-direction: row;
    }
  }
  .hero-left {
    display: flex;
    flex-direction: column;
    gap: 40px;
    align-items: start;
    justify-content: center;
    padding-left: 24px;
    padding-right: 24px;
    flex: 1;
  }
  @media screen and (min-width: 768px) {
    .hero-left {
      padding-left: 80px;
      padding-right: 60px;
    }
  }
  .hero-right {
    flex: 1;
    width: 100%;
    object-fit: cover;
    object-position: top;
    max-height: 487px;
    padding: 24px;
  }
  @media screen and (min-width: 768px) {
    .hero-right {
      max-height: 100vh;
      padding: 0;
    }
  }
  .top {
    display: flex;
  }
</style>
